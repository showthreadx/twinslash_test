<div id="ads-table">
  <div class="row">
    <div class="col-md-9 col-md-offset-2">
      <div class="panel panel-success">
        <div class="panel-heading text-center">
          <div class="row">
              <div class="col-md-4">
                <h2 class='text-right'>List of my archived ads:</h2>
              </div>
              <div class="col-md-4">
                <div class="text-center" style="margin-top: 20px">
                  <%= form_tag(user_archive_ads_path, method: "get", remote: true, class: 'form-inline') do %>
                    <%= label_tag(:search,'Search:') %>
                    <%= text_field_tag :search, params[:search], label: 'Search by published ads:', class: 'form-control', placeholder: "Enter search params:" %>
                    <%= submit_tag "Search", class: 'btn btn-sm btn-success' %>
                  <% end %>  
                </div>   
              </div>
              <div class="col-md-4">
              <div class="text-left" style="margin-top: 20px">
                <%= search_form_for @filter, url: user_archive_ads_path, builder: SimpleForm::FormBuilder, wrapper: :horizontal_form, html: { class: 'form-inline'} do |f| %>
                  <%= label_tag(:ad_type_id_eq,'Choose Ad Type:') %>
                  <%= f.input :ad_type_id_eq, collection: AdType.all, required: false, label: false %>
                  <%= f.button :submit, "Filter", class: 'btn btn-sm btn-success' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="panel-body">
        <% unless @archive_ads.empty? %>
          <table class="table table-sm table-bordered">
            <thead class='thead-dark'>
              <tr>
                <th class="text-center">Title</th>
                <th class="text-center">Description</th>
                <th class="text-center">Status</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
        
            <tbody>
              <% @archive_ads.each do |ad| %>
                <tr>
                  <td class="text-center"><%= ad.title %></td>
                  <td class="text-center"><%= truncate(ad.description, :length => 30) %></td>
                  <td class="text-center"><%= ad.status %></td>
                  <td class="text-center">
                    <%= link_to 'Show', ad, class: 'btn btn-sm btn-primary' %>
                    <% if can? :update, ad %>
                      <%= link_to 'Edit', edit_ad_path(ad), class: 'btn btn-sm btn-primary' %>
                    <% end %>
                    <% if can? :destroy, ad %>
                      <%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-primary' %>
                    <% end %>
                    <% if can? :status_draft, ad %>
                      <%= link_to 'Convert in Draft Ad', status_draft_ad_path(ad), method: :put, data: { confirm: 'This ad will be converted in Draft Ad. Proceed?' }, class: 'btn btn-sm btn-success' %>
                    <% end %>  
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="digg_pagination text-center">
            <%= will_paginate @archive_ads, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, :container => false %>
          </div>
        <% else %>
          <h2 class='text-center'>The list is empty</h2>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="search-results">

</div>
  