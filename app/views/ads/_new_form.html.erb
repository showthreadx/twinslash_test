<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-primary">
      <div class="panel-heading text-center">
          <h2 class='text-center'>Create new Advertising</h3>
      </div>
      <div class="panel-body">
          <%= simple_form_for @ad do |f| %>
          <%= f.label :title, "Title"%>
          <%= f.input :title, label:false, required: true, placeholder: "Enter the name of your Ad" %>
          <%= f.input :description, label: "Description", required: true, hint: "Be short" %>
          <%= f.file_field :images, multiple: true %>
          <div class="text-center" style="margin-top: 30px"> 
            <%= f.button :submit, :class => "btn btn-lg btn-success" %>
            <%= link_to 'Back', user_ads_ads_path, class: "btn btn-lg btn-info" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>>
