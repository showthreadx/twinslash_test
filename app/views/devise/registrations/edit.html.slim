.row
  .col-md-4.col-md-offset-2
    .panel.panel-primary
      .panel-heading.text-center
        h2.text-center
          = t(:edit_my_profile)
      .panel-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          = devise_error_messages!
          .form-group
            = f.label :email
            br
            = f.email_field :email, class: 'form-control'
          .form-group
            = f.label :first_name, t(:first_name)
            br
            = f.text_field :first_name, class: 'form-control'
          .form-group
            = f.label :last_name, t(:last_name)
            br
            = f.text_field :last_name, class: 'form-control'
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            div
              | Currently waiting confirmation for: 
              = resource.unconfirmed_email
          .form-group
            = f.label :password, t(:password)
            i
              = t(:leave_blank)
            br
            = f.password_field :password, autocomplete: "off", class: 'form-control'
          .form-group
            = f.label :password_confirmation, t(:password_confirm)
            br
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
          .form-group
            = f.label :current_password, t(:current_password)
            br
            = f.password_field :current_password, autocomplete: "off", class: 'form-control'
          .form-group
            = f.submit t(:update_my_profile), class: 'btn btn-lg btn-block btn-primary'
  .col-md-4
    .panel.panel-danger
      .panel-heading.text-center
        h2.text-center
          = t(:delete_my_profile)
      .panel-body
        h4.text-center
          = t(:you_can_delete_your_account)
        h4

        p.text-center[style="font-size:100px"]
          | ðŸ˜ž
        .text-center
          = button_to t(:delete_my_profile), registration_path(resource_name), class: "btn btn-lg btn-danger", data: { confirm: t(:are_you_sure) }, method: :delete
      .panel-footer.text-center
        = t(:come_back)